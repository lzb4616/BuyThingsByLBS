<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_grary_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_show_ok"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@drawable/white_bg"
        android:gravity="center" >

        <ImageView
            android:id="@+id/img_show_ok"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/ok" />

        <TextView
            android:id="@+id/tv_show_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_show_ok"
            android:layout_marginTop="10dp"
            android:text="发布成功"
            android:textSize="22sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout_share_title_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="1px"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="3dp"
            android:background="@color/lightgray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="告诉朋友们"
            android:textColor="@color/lightgray"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="1px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:background="@color/lightgray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="2" >

        <Button
            android:id="@+id/btn_publish_share_wechat"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/share_btn_selector"
            android:drawableLeft="@drawable/share_wechat"
            android:drawablePadding="-15dp"
            android:gravity="center"
            android:paddingLeft="40dp"
            android:layout_marginRight="1dp"
            android:text="微信" />

        <Button
            android:id="@+id/btn_publish_share_circle"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/share_circle"
            android:background="@drawable/share_btn_selector"
            android:drawablePadding="-15dp"
            android:gravity="center"
            android:paddingLeft="35dp"
            android:layout_marginLeft="1dp"
            android:text="朋友圈" />
    </LinearLayout>

</LinearLayout>